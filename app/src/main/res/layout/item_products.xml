<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/black"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           android:id="@+id/devider1V"
           />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/devider1V"
            android:text="Название:"
            android:id="@+id/nameLabelTv"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            tools:text="Продукты"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/nameLabelTv"
            app:layout_constraintStart_toEndOf="@+id/nameLabelTv"
            app:layout_constraintTop_toTopOf="@+id/nameLabelTv"
            android:id="@+id/productsTv"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/nameLabelTv"
            android:text="Сумма:"
            android:id="@+id/amountLabelTv"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            tools:text="500.00 AZN"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/amountLabelTv"
            app:layout_constraintStart_toEndOf="@+id/amountLabelTv"
            app:layout_constraintTop_toTopOf="@+id/amountLabelTv"
            android:id="@+id/amountTv"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/amountLabelTv"
            android:text="Плательщик:"
            android:id="@+id/senderLabelTv"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            tools:text="000050508827"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/senderLabelTv"
            app:layout_constraintStart_toEndOf="@+id/senderLabelTv"
            app:layout_constraintTop_toTopOf="@+id/senderLabelTv"
            android:id="@+id/senderTv"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/senderLabelTv"
            android:text="Получатель:"
            android:id="@+id/receiverLabelTv"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            tools:text="000050508827"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/receiverLabelTv"
            app:layout_constraintStart_toEndOf="@+id/receiverLabelTv"
            app:layout_constraintTop_toTopOf="@+id/receiverLabelTv"
            android:id="@+id/receiverTv"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/receiverLabelTv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/devider2V"
            />

        <ImageButton
            android:id="@+id/editImgBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageButton
            android:id="@+id/deleteImgBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.75"
            app:srcCompat="@drawable/ic_launcher_background"
            tools:ignore="VectorDrawableCompat" />


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>